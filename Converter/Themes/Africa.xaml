<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryColor">#292C2C</Color>
    <Color x:Key="SecondaryColor">#202020</Color>
    <Color x:Key="FontColor">#95AC93</Color>
    <Color x:Key="AccentColor">#F99157</Color>
    
    <SolidColorBrush x:Key="PrimaryBrush"
                     Color="{DynamicResource PrimaryColor}" />
    <SolidColorBrush x:Key="SecondaryBrush"
                     Color="{DynamicResource SecondaryColor}" />
    <SolidColorBrush x:Key="FontBrush"
                     Color="{DynamicResource FontColor}" />
    <SolidColorBrush x:Key="AccentBrush"
                     Color="{DynamicResource AccentColor}" />

</ResourceDictionary>