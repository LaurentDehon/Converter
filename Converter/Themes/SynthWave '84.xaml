<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryColor">#393550</Color>
    <Color x:Key="SecondaryColor">#241B2F</Color>
    <Color x:Key="FontColor">#BFBEC1</Color>
    <Color x:Key="AccentColor">#D56BBB</Color>
    
    <SolidColorBrush x:Key="PrimaryBrush"
                     Color="{DynamicResource PrimaryColor}" />
    <SolidColorBrush x:Key="SecondaryBrush"
                     Color="{DynamicResource SecondaryColor}" />
    <SolidColorBrush x:Key="FontBrush"
                     Color="{DynamicResource FontColor}" />
    <SolidColorBrush x:Key="AccentBrush"
                     Color="{DynamicResource AccentColor}" />

</ResourceDictionary>